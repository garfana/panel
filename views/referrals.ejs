<%- include('./components/top') %>

<main class="flex-grow container mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="justify-center w-full mx-auto">
        <div class="flex">
        <nav aria-label="Breadcrumb" class="border border-white/15 w-64 mb-5 inline-flex py-1.5 px-3.5 rounded-full bg-white/5 shadow">
            <ol role="list" class="flex items-center space-x-2">
                <li>
                    <a href="#_" class="text-sm flex items-center gap-2 text-zinc-400 duration-200 hover:text-zinc-300" aria-current="false">
                        <svg
                            aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="icon icon-tabler size-5 icons-tabler-outline icon-tabler-home"
                        >
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <path d="M5 12l-2 0l9 -9l9 9l-2 0"></path>
                            <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7"></path>
                            <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6"></path>
                        </svg>
                        <span>Home</span>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="icon icon-tabler icons-tabler-outline icon-tabler-slash size-4"
                        >
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <path d="M17 5l-10 14"></path>
                        </svg>
                    </a>
                </li>
                <li>
                    <a href="#_" class="text-sm flex items-center gap-2 font-medium text-white/80 duration-200" aria-current="false">
                        Referrals
                    </a>
                </li>
            </ol>
        </nav>
      <span class="text-gray-600 text-md ml-5 mt-1">â€¢</span>
      <h1 class="text-2xl font-semibold mt-0.5 ml-5 mb-0.5" style="font-family: 'Space Grotesk';">Welcome back, <%= req.session.userinfo.username %>.</h1> 
      </div>
    </div>


    <!-- Notification Messages -->
    <% if (req.query.err) { %>
    <div class="rounded-lg <%= req.query.err === 'none' ? 'bg-green-800' : 'bg-red-800' %> p-4 mb-8">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 <%= req.query.err === 'none' ? 'text-green-300' : 'text-red-300' %>" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                </svg>
            </div>
            <div class="ml-3 flex-1 md:flex md:justify-between">
                <p class="text-sm <%= req.query.err === 'none' ? 'text-green-400' : 'text-red-400' %>">
                    <% if (req.query.err === 'none') { %>
                        Successfully created the referral code!
                    <% } else if (req.query.err === 'ALREADYEXISTS') { %>
                        The code you provided already exists.
                    <% } else if (req.query.err === 'INVALIDCODE') { %>
                        No code was provided or the one you provided was invalid.
                    <% } %>
                </p>
            </div>
        </div>
    </div>
    <% } %>

    <!-- Referral System Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Create Referral Code -->
        <div class="rounded-lg bg-white/5 border border-white/10 p-6 shadow">
            <h2 class="text-xl font-semibold text-white mb-4">Create a Referral Code</h2>
            <form action="/generate" method="get" class="space-y-4">
                <input type="text" name="code" id="code" class="transition ease-in-out delay-100 block w-full text-white rounded-md bg-white/10 border-white/10 focus:border-orange-600 focus:ring-orange-600 sm:text-sm" placeholder="Enter referral code">
                <button type="submit" class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-orange-600 transition hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
                    Create Referral Code
                </button>
            </form>
        </div>

        <!-- Claim Referral Code -->
        <div class="rounded-lg bg-white/5 border border-white/10 p-6 shadow">
            <h2 class="text-xl font-semibold text-white mb-4">Claim a Referral Code</h2>
            <form action="/claim" method="get" class="space-y-4">
                <input type="text" name="code" id="claim-code" class="transition ease-in-out delay-100 block w-full text-white rounded-md bg-white/10 border-white/10 focus:border-orange-600 focus:ring-orange-600 sm:text-sm" placeholder="Enter referral code to claim">
                <button type="submit" class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-orange-600 transition hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
                    Claim Referral Code
                </button>
            </form>
        </div>

        <!-- Information / Help -->
        <div class="md:col-span-2 rounded-lg bg-white/5 border border-white/10 p-6 shadow">
            <h2 class="text-xl font-semibold text-white mb-4">Information / Help</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <h3 class="text-gray-300 font-medium mb-2">For every user who uses your code, you'll get:</h3>
                    <p class="text-orange-400 font-bold text-2xl">80 BrimCoins</p>
                </div>
                <div>
                    <h3 class="text-gray-300 font-medium mb-2">The user who claims your code will get:</h3>
                    <p class="text-orange-400 font-bold text-2xl">250 BrimCoins</p>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('./components/bottom') %>